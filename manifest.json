{
  "manifest_version": 3,
  "name": "SmartNotes AI",
  "version": "1.0",
  "description": "Summarize and simplify any text using Chrome's built-in Gemini Nano AI.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
